{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metadata",
  "type": "object",
  "properties": {
    "exposures": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "trait": { "type": "string" },
          "category": { "type": "string" }
        },
        "required": ["id", "trait", "category"],
        "additionalProperties": false
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "trait": { "type": "string" },
          "category": { "type": "string" }
        },
        "required": ["id", "trait", "category"],
        "additionalProperties": false
      }
    },
    "methods": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "method": { "type": "string" },
              "category": { "type": "string" }
            },
            "required": ["id", "method", "category"],
            "additionalProperties": false
          },
          { "type": "string" }
        ]
      }
    },
    "population": {
      "anyOf": [
        { "type": "array", "items": { "type": "string" } },
        { "type": "string" }
      ]
    },
    "metainformation": {
      "type": "object"
    }
  },
  "required": ["exposures", "outcomes", "methods", "population", "metainformation"],
  "additionalProperties": false
}
